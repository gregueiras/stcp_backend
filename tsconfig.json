{
  "compilerOptions": {
    "module": "commonjs",
    "esModuleInterop": true,
    "target": "es6",
    "noImplicitAny": true,
    "moduleResolution": "node",
    "outDir": "build",
    "lib": ["es2019"],
    "baseUrl": ".",
    "paths": {
      "~/*": ["src/*"]
    },
    "sourceMap": true,
    "inlineSources": true,
    "sourceRoot": "/"
  },
  "include": ["src/**/*"]
}
