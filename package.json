{
  "name": "stcp_backend",
  "version": "1.0.0",
  "main": "index.js",
  "repository": "https://github.com/gregueiras/stcp_backend.git",
  "author": "Gon√ßalo Santos <gregueiras@gmail.com>",
  "license": "MIT",
  "dependencies": {
    "dotenv": "^8.1.0",
    "expo-server-sdk": "^3.3.0",
    "express": "^4.17.1",
    "node-fetch": "^2.6.0",
    "prettyjson": "^1.2.1"
  },
  "scripts": {
    "start": "node --inspect=5858 -r ts-node/register ./src/index.ts",
    "build": "tsc",
    "postinstall": "yarn build",
    "go": "yarn build && yarn start",
    "dev": "nodemon"
  },
  "nodemonConfig": {
    "ignore": [
      "**/*.test.ts",
      "**/*.spec.ts",
      ".git",
      "node_modules"
    ],
    "watch": [
      "src"
    ],
    "exec": "yarn start",
    "ext": "ts"
  },
  "devDependencies": {
    "@types/express": "^4.17.6",
    "@types/node": "^12.7.4",
    "@types/prettyjson": "^0.0.29",
    "@typescript-eslint/eslint-plugin": "^2.2.0",
    "@typescript-eslint/parser": "^2.2.0",
    "eslint": "^6.3.0",
    "eslint-config-prettier": "^6.3.0",
    "eslint-plugin-prettier": "^3.1.0",
    "nodemon": "^2.0.3",
    "prettier": "^1.18.2",
    "ts-node": "^8.10.1",
    "typescript": "^3.6.2"
  },
  "engines": {
    "node": "12.16.1",
    "yarn": "1.22.4"
  }
}
